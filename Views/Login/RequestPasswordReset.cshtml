@{
    ViewData["Title"] = "Passwort zurücksetzen";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border border-dark-subtle rounded-2 shadow p-4">
                <div class="card-header rounded-2 px-4 pt-2 pb-2" style="background: linear-gradient(90deg, #789abc, #cba987)">
                    <h4 class="mb-0">Passwort zurücksetzen</h4>
                </div>
                <div class="card-body bg-light mt-3">
                    <form asp-controller="Login" asp-action="ResetPassword" method="post">
                        <div class="form-group mb-3">
                            <label for="email">Bitte geben Sie Ihre registrierte E-Mail-Adresse ein:</label>
                            <input type="email" name="email" class="form-control border-dark shadow-sm" id="email" placeholder="E-Mail-Adresse" required />
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-dark btn-outline-warning border-dark rounded-2">Reset-Link anfordern</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
