@{
    ViewData["Title"] = "Neues Passwort setzen";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border border-dark-subtle rounded-2 shadow p-4">
                <div class="card-header rounded-2 px-4 pt-2 pb-2" style="background: linear-gradient(90deg, #789abc, #cba987)">
                    <h4 class="mb-0">Neues Passwort erstellen</h4>
                </div>
                <div class="card-body bg-light mt-3">
                    <form asp-controller="Login" asp-action="EnterNewPassword" method="post">
                        <input type="hidden" name="token" value="@ViewBag.ResetToken" />

                        <div class="form-group mb-3">
                            <label for="newPassword">Neues Passwort:</label>
                            <input type="password" name="newPassword" class="form-control border-dark shadow-sm" id="newPassword" placeholder="Neues Passwort" required />
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-dark btn-outline-warning border-dark rounded-2">Passwort speichern</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>