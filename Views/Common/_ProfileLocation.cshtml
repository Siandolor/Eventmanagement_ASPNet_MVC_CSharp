@model Eventmanagement.Models.Users.Location

<h4>Firmenprofil von "@(Model.Location_CompanyName)"</h4>

<div class="row align-items-center">
    <div class="col-3">
        @{
            var rawPath = Model.Location_ProfileImage;

            if (Model.Location_IsBlocked)
            {
                rawPath = "~/images/default_location_blocked-V1.png";
            }
            else if (string.IsNullOrEmpty(rawPath))
            {
                rawPath = "~/images/default_location_active-V1.png";
            }
            else
            {
                rawPath += "?v=" + DateTime.Now.Ticks;
            }

            var imagePath = Url.Content(rawPath);
        }
        <img src="@imagePath" class="img-thumbnail mt-2 mb-2" style="width: 300px;" />
    </div>

    <div class="col-9">
        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Firma</div>
            <div class="col-8">@Model.Location_CompanyName</div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Webseite</div>
            @{
                var website = Model.Location_WebSiteURL;
                if (!string.IsNullOrEmpty(website) && !website.StartsWith("http"))
                {
                    website = "https://" + website;
                }
            }
            <div class="col-8">
                <div><a href="@website" target="_blank">@website</a></div>
            </div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Ansprechperson</div>
            <div class="col-8">
                <div>@Model.Location_ContactPerson</div>
            </div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">FIN</div>
            <div class="col-8">@Model.Location_FIN</div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Adresse</div>
            <div class="col-8">
                <div>@Model.Location_StreetName @Model.Location_StreetNumber @Model.Location_ApartmentNumber</div>
                <div>@Model.Location_ZIP @Model.Location_City, @Model.Location_State</div>
                <div>@Model.Location_Country</div>
            </div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Telefon</div>
            <div class="col-8">
                <div>@Model.Location_Phone</div>
            </div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">E-Mail</div>
            <div class="col-8">
                <div>@Model.Location_Email</div>
            </div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Sitzplätze</div>
            <div class="col-8">@Model.Location_SeatingsAmount</div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Stehplätze</div>
            <div class="col-8">@Model.Location_StandingsAmount</div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Registriert am</div>
            <div class="col-8">@Model.Location_RegistrationDate</div>
        </div>

        <div class="col-12 row mt-1 mb-2">
            <div class="col-4 fw-bold">Benutzerstatus</div>
            <div class="col-8">@Model.Location_IsBlocked</div>
        </div>
    </div>
</div>

<div class="row align-items-center mt-2">
    <div class="col-12 row d-row mt-1 mb-2">
        <div class="col-2 fw-bold">Biografie</div>
        <div class="col-10">
            @Model.Location_ProfileBio
        </div>
    </div>
</div>
